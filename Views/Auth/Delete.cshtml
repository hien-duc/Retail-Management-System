@model Retail_Management_System.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Confirm Delete</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Are you sure you want to delete this user account?
                    </div>
                    
                    <dl class="row mt-4">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Username)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>
                        
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                        
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FullName)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>
                        
                        <dt class="col-sm-3">Role</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Role.RoleName)</dd>
                        
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
                        <dd class="col-sm-9">
                            @if (Model.Status == 1)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedDate)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedDate)</dd>
                    </dl>
                    
                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>