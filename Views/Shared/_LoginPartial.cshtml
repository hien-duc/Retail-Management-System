<ul class="navbar-nav ms-auto">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                @if (User.IsInRole("Admin"))
                {
                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Index"><i class="bi bi-people me-2"></i>User Management</a></li>
                    <li><hr class="dropdown-divider"></li>
                }
                <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Auth" asp-action="Login"><i class="bi bi-box-arrow-in-right me-1"></i>Login</a>
        </li>
    }
</ul>